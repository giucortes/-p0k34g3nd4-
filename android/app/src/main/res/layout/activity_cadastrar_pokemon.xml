<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.CadastrarPokemonActivity"
    android:background="@drawable/bg" >


    <EditText
        android:id="@+id/nomePokemon"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="182dp"
        android:drawableLeft="@drawable/baseline_person_white_24dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/baseline_person_white_24dp"
        android:ems="10"
        android:hint="Nome Pokemon"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/especiePokemon"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="221dp"
        android:drawableLeft="@drawable/baseline_fingerprint_white_24dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/baseline_fingerprint_white_24dp"
        android:ems="10"
        android:hint="EspÃ©cie Pokemon"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pesoPokemon"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="159dp"
        android:drawableLeft="@drawable/baseline_local_dining_white_24dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/baseline_local_dining_white_24dp"
        android:ems="10"
        android:hint="Peso Pokemon"
        android:inputType="text|numberDecimal" />

    <EditText
        android:id="@+id/alturaPokemon"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:drawableLeft="@drawable/baseline_accessibility_white_24dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/baseline_accessibility_white_24dp"
        android:ems="10"
        android:hint="Altura Pokemon"
        android:inputType="text|numberDecimal" />

    <Button
        android:id="@+id/cadastrarPokemonButton"
        android:layout_width="354dp"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_button_login"
        android:onClick="cadastrarPokemon"
        android:text="@string/button_cadastrar" />


    <ImageView
        android:id="@+id/imagemCarregada"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="193dp"
        android:layout_marginTop="22dp"
        android:src="@color/colorPrimary" />

    <Button
        android:id="@+id/imagemGaleriaButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="46dp"
        android:text="Buscar Imagem" />

    <Button
        android:id="@+id/imagemCameraButton"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagemGaleriaButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="Tirar Foto" />


</RelativeLayout>