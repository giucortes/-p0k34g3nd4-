<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/retangulo1" />

    <TextView
        android:id="@+id/txtNomePokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imagemDetalhe"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="216dp"
        android:fontFamily="@font/latoblack"
        android:text="Nome do Pokemon"
        android:textColor="@color/texto_escuro"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtNomeTreinador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="466dp"
        android:fontFamily="@font/latobold"
        android:text="Nome do Treinador"
        android:textColor="@color/texto_destaque_lista"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/imagemDetalhe"
        android:layout_width="161dp"
        android:layout_height="159dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/p001" />

    <TextView
        android:id="@+id/txtEspeciePokemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="17sp"
        android:text="EspÃ©cie" />

    <TextView
        android:id="@+id/txtPesoPokemon"
        android:layout_width="188dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-76dp"
        android:layout_marginBottom="93dp"
        android:layout_toStartOf="@+id/imagemDetalhe"
        android:text="120.20"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txtAlturaPokemon"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtPesoPokemon"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-77dp"
        android:layout_marginBottom="91dp"
        android:layout_toEndOf="@+id/imagemDetalhe"
        android:text="130.67"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="160dp"
        android:text="Peso"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="158dp"
        android:text="Altura"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="17dp"
        android:layout_height="66dp"
        android:layout_above="@+id/textView6"
        android:layout_marginStart="-39dp"
        android:layout_marginBottom="-109dp"
        android:layout_toEndOf="@+id/txtEspeciePokemon"
        app:srcCompat="@drawable/detalhesborda" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/favoritarButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="222dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimaryDark"
        app:srcCompat="@android:drawable/btn_star_big_off" />

</RelativeLayout>